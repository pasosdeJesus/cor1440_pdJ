<%
  if f.object.fecha 
    fr = f.object.fecha
  else
    fr = Time.now.strftime('%Y-%m-%d')
  end
  lp = Cor1440Gen::Proyectofinanciero.where(
    "fechainicio <= ? AND ? <= fechacierre", fr, fr)
%>

<%= f.association :proyectofinanciero,
  collection: lp,
  label_method: :nombre, 
  value_method: :id,
  input_html: { 
    class: 'chosen-select',
    "data-toggle" => 'tooltip',
    "title" => 'Los proyectos presentados son los vigentes en la fecha de la actividad (cambie la fecha para actualizar estas opciones)'
  }
%>

